<h1>edit comment</h1>



<%= form_with(model: [@post,@comment], class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
  

  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_field :com, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="actions">
    <%= f.submit "edit comment" %>
  </div>
<% end %>
