<h1>create new post</h1>



<%= form_with(model: @post, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
  

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true, autocomplete: "name" %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description, autofocus: true, autocomplete: "description" %>
  </div>
  <div>
    <%= select_tag(:post_type_id, options_for_select([['Public', 1], ['Friends', 2],['Only me', 3]])) %>
  </div>
  <div class="actions">
    <%= f.submit "create post" %>
  </div>
<% end %>
